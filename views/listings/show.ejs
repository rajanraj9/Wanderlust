<% layout("/layouts/boilerplate") %>

<div class="row mt-4 mb-5">
 
  <div class="col-8 offset-3 mb-3">
    <h3><%= listing.title %></h3>
  </div>

 
  <div class="col-6 offset-3">
    <div class="card show-card">
      <img 
        src="<%= listing.image.url %>" 
        class="card-img-top show-img" 
        alt="listing_image"
      />

      <div class="card-body">
        <p class="card-text">
          <%= listing.description %><br />
          &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %><br />
          <%= listing.location %><br />
          <%= listing.country %>
        </p>
      </div>
    </div>
  </div>

  <div class="col-6 offset-3 mt-4 d-flex gap-3">
    
    <a 
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-danger col-2"
    >
      Edit
    </a>

    <form 
      method="POST"
      action="/listings/<%= listing._id %>?_method=DELETE"
      class="m-0"
    >
      <button class="btn btn-dark offset-5">
        Delete
      </button>
    </form>

  </div>
  <div class="col-8 offset-3">
    <hr />
    <h4>Leave a Review</h4>
    <form>
      <div>
        <label for="rating">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]">
      </div>

      <div>
        <label for="comment">comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="10"></textarea>
      </div>
      <button>Submit</button>
    </form>
  </div>

</div>
